@model IEnumerable<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@latest/build/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create New Product</a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.HomeImgUrl))
                                {
                                    <img src="~/Images/@product.HomeImgUrl" alt="@product.Name" width="100" height="100" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Category.Name</td>
                            <td>@product.Discreption</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Actions
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="Product/Details/@product.Id" class="dropdown-item">View</a></li>
                                        <li><a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="dropdown-item">Edit</a></li>
                                        <li><a href="javascript:void(0)" onclick="Delete('/Product/Delete/@product.Id')" class="dropdown-item text-danger">Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @section Scripts {
       
        <script src="~/js/product.js"></script>
    }
</body>
</html>