@model ProductViewModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div id="carouselDetails" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @if (Model.Product.ImgUrl != null && Model.Product.ImgUrl.Any())
                    {
                        for (var i = 0; i < Model.Product.ImgUrl.Count(); i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="~/Images/@Model.Product.ImgUrl.ElementAt(i).ImageUrl" class="d-block w-100" alt="@Model.Product.Name">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/300" class="d-block w-100" alt="Placeholder Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselDetails" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselDetails" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Product.Name</h5>
                <p class="card-text">@Model.Product.Discreption</p>
                <p class="card-text"><strong>Price:</strong> @Model.Product.Price.ToString("C")</p>
                <p class="card-text"><strong>Category:</strong> @Model.Product.Category?.Name</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to Products</a>
            </div>
        </div>
    </div>
</body>
</html>