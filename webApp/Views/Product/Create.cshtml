@model ProductViewModel
@{
    // Initialize a list of SelectListItem
    var categories = new List<SelectListItem>
    {
        new SelectListItem { Value = "", Text = "Select Category" }  // Default item
    };

    // Add the actual categories from ViewBag.Cat
    categories.AddRange(((List<Category>)ViewBag.Cat).Select(c => new SelectListItem
            {
                Value = c.Id.ToString(),
                Text = c.Name
            }));

    // Create the SelectList
    SelectList items = new SelectList(categories, "Value", "Text");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Edit Product</h2>
        <form method="post" asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
           @*  <input type="hidden" asp-for="Id" /> *@
            <div class="form-group">
                <label asp-for="@Model.Product.Name">Name:</label>
                <input asp-for="@Model.Product.Name" class="form-control"  required />
                <span asp-validation-for="@Model.Product.Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Price">Price:</label>
                <input asp-for="@Model.Product.Price" class="form-control"required />
                <span asp-validation-for="@Model.Product.Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventories.Quantity">Quantity:</label>
                <input asp-for="Inventories.Quantity" class="form-control" required />
                <span asp-validation-for="Inventories.Quantity"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Discreption">Description:</label>
                <textarea asp-for="@Model.Product.Discreption" class="form-control" required></textarea>
                <span asp-validation-for="@Model.Product.Discreption"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images">Images:</label>
                <input type="file" class="form-control-file" id="images" name="Images" accept="image/*" multiple />
            </div>
            <div class="form-group">
                <select asp-for="Product.CategoryId" class="form-select" asp-items="items">
                </select>
            </div>
            <!-- Add other fields as needed -->
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }


}