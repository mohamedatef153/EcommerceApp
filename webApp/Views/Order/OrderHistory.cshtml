@model IEnumerable<UserOrderHeader>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mt-4">
    <h2 class="mb-4">Order History</h2>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-route-status="All" class="btn btn-outline-dark me-2">
                <i class="fas fa-list"></i> All
            </a>
            <a asp-route-status="pending" class="btn btn-outline-primary me-2">
                <i class="fas fa-clock"></i> Pending
            </a>
            <a asp-route-status="inprocess" class="btn btn-outline-info me-2">
                <i class="fas fa-spinner"></i> In Process
            </a>
            <a asp-route-status="canceled" class="btn btn-outline-danger me-2">
                <i class="fas fa-times"></i> Canceled
            </a>
            <a asp-route-status="shipped" class="btn btn-outline-success me-2">
                <i class="fas fa-shipping-fast"></i> Shipped
            </a>
            <a asp-route-status="completed" class="btn btn-outline-secondary">
                <i class="fas fa-check-circle"></i> Completed
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Date of Order</th>
                    <th scope="col">Item Name</th>
                    <th scope="col">Total Order Amount</th>
                    <th scope="col">Order Status</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.DateOfOrder.ToString("MM/dd/yyyy")</td>
                        <td>@order.Name</td>
                        <td>@order.TotalOrderAmount.ToString("C")</td>
                        <td>@order.OrderStatus</td>
                        <td>
                            <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>