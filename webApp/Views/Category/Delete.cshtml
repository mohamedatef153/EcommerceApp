@model Category
<div class="PaddingAll">
<div class="row">
        <div class="col-lg-9 col-md-6 col-sm-12">
            <h1 class="text-danger">Delete Item</h1>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-3">
            <a asp-action="Index" class="btn btn-primary"form-control>Go back to list</a>
        </div>
</div>
<hr/>
<div class="PaddingAllWhite">
    <form asp-action="Delete" method="post">
        <div class="row">
            <div class="col-lg-9 col-md-6 col-sm-12">
                <div class="row">
                        <div class="col-6  text-warning">
                            <h4>Category</h4>
                        </div>
                        <div class="col-6 text-danger text-warning">
                            <h4>@Model.Name</h4>
                        </div>

                </div>
            </div>

                <hr />
            <div class="col-lg-3 col-md-6 col-sm-12 form-group">
                <button type="submit" asp-route-id="@Model.Id" class="btn btn-danger form-control">Delete   </button>
            </div>
        </div>
    </form>
</div>
</div>
