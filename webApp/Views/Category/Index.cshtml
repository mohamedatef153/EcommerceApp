@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}
@if (TempData["AlertMessage"]!= null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        
       <button type="button" class="btn-close text-dark" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["AlertMessage"]
    </div>
}
<div class="PaddingAll"> 
    <div class="row n-3">
        <div class="col-lg-7 col-md-5 col-sm-12">
            <h2 class="text-primary"> Category List</h2>
            <hr/>
        </div>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-12"> 
        <a asp-action="Upsert" asp-controller="Category" class="btn btn-primary form-control" >Create Category</a>
    </div>
    <div class="PaddingAllWhite">
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
               
                <td>
                    <div class="btn-group col-lg-4 col-md-4 col-sm-12 pb-2" role="group" aria-label="Category Actions">
                                <a class="btn btn-primary form-control" asp-controller="Category" asp-action="Upsert" asp-route-id="@category.Id">Edit</a>
                       
                    </div>
                            <div class="btn-group col-lg-4 col-md-4 col-sm-12 pb-2" role="group" aria-label="Category Actions">

                                <a class="btn btn-danger form-control" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                            </div>
                </td>
            </tr>

            
           
        }
    </tbody>
</table>
    </div>
</div>
