@model HomeViewModel


    <div class="container mt-3">
        <div class="row mb-4">
            <div class="col-md-8">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" asp-for="SearchByName" class="form-control"  placeholder="Search...">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit" style="background-color: #007bff;">
                                <i class="fas fa-search" style="color: white;"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-3">
                <!-- Categories Links -->
                <div class="mb-4">
                    <h5>Categories</h5>
                    <ul class="list-group">
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item">
                                <a  asp-action="Index" asp-route-searchByCategoryId="@category.Id">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- First Carousel -->
                <div id="carouselExample1" class="carousel slide mb-4" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 1">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 2">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExample1" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample1" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <!-- Second Carousel -->
                <div id="carouselExample2" class="carousel slide mb-4" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 1">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 2">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://via.placeholder.com/150" alt="Slide 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExample2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <!-- Main Section -->
            <div class="col-md-9">
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <img class="card-img-top" src="~/Images/@product.HomeImgUrl" alt="@product.Name">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-center">@product.Name</h5>
                                    <h4 class="card-title text-center">$@product.Price</h4>
                                    <div class="mt-auto">
                                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary btn-block mb-2">View Details</a>
                                        <a asp-action="AddtoCart" asp-controller="Cart" asp-route-productId="@product.Id" class="btn btn-success btn-block" onclick="addToCart('@product.Name')">Add to Cart</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <!-- FontAwesome JS -->
      @*   <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"  crossorigin="anonymous"></script> *@
        <!-- Bootstrap JS and dependencies -->

        <script>
            function addToCart(productName) {
                // Your logic to add the product to the cart
                alert("Product " + productName + " added to cart!");
              
            }
        </script>
    }